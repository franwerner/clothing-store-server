{
  "compilerOptions": {
    "target": "ESNext",                    
    "module": "ESNext",                  
    "moduleResolution": "bundler",             
    "sourceMap": true,                     
    "strict": true,                       
    "esModuleInterop": true,              
    "noImplicitAny": true,                
    "outDir": "./dist",                    
    "rootDir": "./src",
    "forceConsistentCasingInFileNames" : true,
    "baseUrl": ".",
    "paths": {
      "@/*" : ["src/*"],
    },
  },
  
  "include": [
    "./src/**/*",
    "./global.d.ts"                          
  ],
  "exclude": [
    "node_modules",
    "./ngrok.exe",
  ]
}